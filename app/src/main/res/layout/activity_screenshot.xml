<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenshotActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/seekBar1Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="344dp"
            android:layout_marginRight="344dp"
            android:text="0.0"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.927"
            tools:ignore="MissingConstraints" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="331dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:max="100"
            android:min="-100"
            android:progress="0"
            app:layout_constraintBottom_toBottomOf="@+id/seekBar1Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/seekBar1Text"
            tools:ignore="MissingConstraints" />

        <io.github.controlwear.virtual.joystick.android.JoystickView
            android:id="@+id/joystickView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="105dp"
            app:JV_backgroundColor="#A7A2A1"
            app:JV_borderColor="#292827"
            app:JV_buttonColor="#464443"
            app:JV_fixedCenter="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.434"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="50dp" />

        <TextView
            android:id="@+id/joyStickX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="305dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="400dp"
            android:text="0"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.95"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="60dp" />

        <TextView
            android:id="@+id/joyStickY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="305dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="400dp"
            android:text="0"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.95"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/x"
            android:layout_width="262dp"
            android:layout_height="302dp"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/lets_go_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/let_s_go" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>